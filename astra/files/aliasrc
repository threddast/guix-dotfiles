alias la='ls -a'
alias ll='ls -l'
alias ls='ls -p --color=auto'
alias grep='grep --color=auto'
alias vim='nvim'

alias dots='~/engstrand-config/guix-dotfiles/; ls -a'

alias sysrec='sudo RDE_USER=$USER RDE_TARGET=system guix system reconfigure ~/.config/guix/config.scm'
alias homerec='RDE_USER=$USER RDE_TARGET=home guix home reconfigure ~/.config/guix/config.scm'

alias gs='git status'
alias gd='git diff'
alias gdc='git diff --cached'
alias ga='git add'
alias gr='git restore'
alias gc='git commit -m'
alias gl='git log --show-signature'

alias getsha='guix hash --hash=sha256 --format=nix-base32 -rx'
